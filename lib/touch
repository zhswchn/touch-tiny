#!/usr/bin/env node

import Program from './Program.js'
import { hasFileExtension, create } from './core.js'

const program = new Program()
program
  .setVersion('1.0.0')
  .setUsage('touch [folderName]/[filename]')
  .setDescription('Create a new file or folder in the current directory')
  .parse(process.argv)

const targetPath = program.args[0]

try {
  const message = create(targetPath)
  console.log(`✅ ${message}`)
} catch (error) {
  console.error(`❌ Error: ${error.message}`)
  process.exit(1)
}
